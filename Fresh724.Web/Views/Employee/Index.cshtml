@model IEnumerable<Fresh724.Entity.Entities.Employee>


@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Add" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
			</a>
		</div>
	</div>
    <br /><br />

<table  id="tblData"  class="table table-bordered table-striped" style="width:100%">
    <thead>
    			<tr>
    				<th>FirstName</th>
    				<th>LastName</th>
    				<th>Image</th>
    				<th>CompanyName</th>
    				<th></th>
    			</tr>
    			</thead>
</table>
</div>

@section Scripts{
    <script src="~/js/employee.js"></script>
}
