@using PagedList
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Fresh724.Entity.Entities.Company>
@using PagedList.Mvc
@{
	ViewData["Title"] = "Index";
}
<h2>Company/Index</h2>
@using (Html.BeginForm())
{
	<div class="row mb-3">
		<div class="col">
			<a asp-action="Add" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>New Company</a>
		</div>
	</div>
   <div class="container">
            <div class="table-responsive">
                <div class="table-wrapper">			
                    <div class="table-title">
                        <div class="row">
                            <div class="col-xs-4">
        						<div class="show-entries">
                                </div>						
        					</div>
        					<div class="col-xs-4">
        						<h2 class="text-center">ApplicationUser <b>Details</b></h2>
        					</div>
                            <div class="col-xs-4">
                                <div class="search-box">
        							<div class="input-group">
        								<span class="input-group-addon"><i class="material-icons">&#xE8B6;</i></span>
        								<input type="text" class="form-control" placeholder="Search&hellip;">
        							</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                        <tr>
	                        <th>CompanyId</th>
                            <th>Name</th>
                            <th>Status</th>
	                        <th>CreateDate<i class="fa fa-sort"></i></th>
	                        <th></th>
	                        <th></th>
	                        <th></th>
                        </tr>
                        </thead>
                         @foreach (var company in Model)
                         {
	                         <tbody>
	                         <tr class="table table-secondary">
		                         <td class="User">@company.Id</td>
		                         <td class="Street1">@company.Name</td>
		                         <td class="Street2">@company.Status</td>
		                         <td class="City">@company.CreatedDateTime</td>
		                         <td><a asp-action="Edit" asp-route-id="@company.Id" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a> </td>
		                         <td><a asp-action="Delete" asp-route-id="@company.Id"  onclick="return confirm('Are you sure want to delete this user : @company.Name ?')" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
		                         </td>
	                         </tr>
	                         </tbody>
	                         
                         }
                        
                    </table>

                </div>  
            </div>  
          </div>  
}

